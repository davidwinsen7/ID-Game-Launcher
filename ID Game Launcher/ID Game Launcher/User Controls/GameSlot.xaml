<UserControl x:Class="ID_Game_Launcher.GameSlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ID_Game_Launcher"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Cursor="Hand">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="250" MouseLeave="Mouse_Leave" MouseEnter="MouseHover" MouseLeftButtonUp="PanelClick">
            <Image Name="GameImage" Height="200" Width="200" Margin="0,10,0,0"/>
            <Label Name="GameName" FontSize="18" Content="Game Name Here" Width="200" HorizontalContentAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
