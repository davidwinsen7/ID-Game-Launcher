<Window x:Class="ID_Game_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ID_Game_Launcher"
        mc:Ignorable="d"
        Title="ID Game Launcher" Height="720" Width="1080" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Background="CadetBlue">
        <TabControl HorizontalAlignment="Center" Height="692" Margin="0,0" VerticalAlignment="Center" Width="1080">
            <TabItem Header="Home" Height="45" Width="180" FontSize="30" Margin="360,0,-360,0">
                <Grid Background="Black" Margin="0,0,0,0"/>
            </TabItem>
            <TabItem Header="Games" Height="45" Width="180" FontSize="30" Margin="360,0,-360,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
