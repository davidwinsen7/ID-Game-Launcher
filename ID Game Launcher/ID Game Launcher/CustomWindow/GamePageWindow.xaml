<Window x:Class="ID_Game_Launcher.CustomWindow.GamePageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ID_Game_Launcher.CustomWindow"
        mc:Ignorable="d"
        Title="GamePageWindow" Height="720" Width="1080" Background="#151D47" ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Name="displayImage" Width="300" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0"/>
        <Button Width="200" Height="50" Content="PLAY GAME" FontSize="32" Cursor="Hand" HorizontalAlignment="Left" Margin="100,100,0,0" Click="Button_Click"/>
        <Label Name="displayName" Height="60" Content="Display Name Here" FontSize="42" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="370,50,0,0"/>
        <Label FontSize="14" Content="©2020 by David Winsen" VerticalAlignment="Bottom" HorizontalAlignment="Center" Opacity="0.5"/>
    </Grid>
</Window>
